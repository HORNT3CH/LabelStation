@model IEnumerable<LabelStation.Models.Associates>

@{
    ViewData["Title"] = "Associates";
    Layout = "~/Views/Shared/_Layout_Hudson.cshtml";

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.SearchPager != null)
    {
        pager = ViewBag.SearchPager;
        pageNo = pager.CurrentPage;
    }
}

<style>
    .avatar {
        vertical-align: middle;
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }
</style>

<h1 class="mt-5">Associates</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<partial name="_pager" model="@pager" />
<div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
    <table class="table table-bordered table-light table-striped m-auto custom-table text-dark">
        <thead>
            <tr>
                <th>
                    Full Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a class="btn btn-sm btn-warning" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>





