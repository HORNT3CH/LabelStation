@model LabelStation.Models.Inventory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Hudson.cshtml";
}
<br />
<h1 class="mt-5">Create Inventory PWP</h1>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label">Employee Name</label>
                <input asp-for="EmployeeName" type="text" id="textInput" class="form-control" placeholder="Enter Employee Name"/>
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrintNumber" class="control-label">Quantity</label>
                <input id="evenNumberInput" asp-for="PrintNumber" class="form-control no-spinner" type="number" value="20" maxlength="3" min="1" placeholder="Enter Number to Print" />
                <span asp-validation-for="PrintNumber" class="text-danger"></span>
            </div>
            <div id="outputDiv" class="mt-5 display-4">
                
            </div>
            <div class="form-group">
                <input type="submit" value="Print" class="btn btn-primary mt-5" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-2" asp-controller="Home" asp-action="Hudson">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
