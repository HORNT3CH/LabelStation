@model LabelStation.Models.HorticulturalContainers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Hudson.cshtml";
}
<br />
<h1 class="mt-5">Create New Label</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LTPartNumber" class="control-label"></label>
                <input asp-for="LTPartNumber" class="form-control" placeholder="Enter LT Part Number"/>
                <span asp-validation-for="LTPartNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPartNumber" class="control-label"></label>
                <input asp-for="CustomerPartNumber" class="form-control" placeholder="Enter Customer Part Number"/>
                <span asp-validation-for="CustomerPartNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Barcode" class="control-label"></label>
                <input asp-for="Barcode" class="form-control" placeholder="Enter Barcode Number"/>
                <span asp-validation-for="Barcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackAmount" class="control-label"></label>
                <input asp-for="PackAmount" class="form-control" placeholder="Enter Pack Amount"/>
                <span asp-validation-for="PackAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" value="0" class="form-control" placeholder="Enter Quantity to Print"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Print" class="control-label"></label>
                <input asp-for="Print" class="form-control" value="No" readonly />
                <span asp-validation-for="Print" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-2" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
