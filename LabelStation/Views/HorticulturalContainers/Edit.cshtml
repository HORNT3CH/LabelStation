@model LabelStation.Models.HorticulturalContainers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Hudson.cshtml";
}
<br />
<h1 class="mt-5">Print Labels</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LTPartNumber" class="control-label"></label>
                <input asp-for="LTPartNumber" class="form-control" readonly/>
                <span asp-validation-for="LTPartNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPartNumber" class="control-label"></label>
                <input asp-for="CustomerPartNumber" class="form-control" readonly/>
                <span asp-validation-for="CustomerPartNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" readonly/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Barcode" class="control-label"></label>
                <input asp-for="Barcode" class="form-control" readonly/>
                <span asp-validation-for="Barcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackAmount" class="control-label"></label>
                <input asp-for="PackAmount" class="form-control" readonly/>
                <span asp-validation-for="PackAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Print" class="control-label"></label>
                <select class="form-control" asp-for="Print">
                    <option value="">Select Option</option>
                    <option value="No">No</option>
                    <option value="Yes">Yes</option>
                </select>
                <span asp-validation-for="Print" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Print Labels" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-2" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
