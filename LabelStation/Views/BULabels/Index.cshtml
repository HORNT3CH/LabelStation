@model IEnumerable<LabelStation.Models.BULabel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Hudson.cshtml";

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1 class="mt-5">Backup Labels</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Item to Backup Labels</a>
</p>
<div class="col-4 p-0 justify-content-end mb-2">
    <form asp-controller="BULabels" asp-action="Index">
        <span class="btn-group">
            <input class="form-control" type="text" name="SearchText" placeholder="Search Key" />
            <input class="p-1 m-lg-2 btn btn-sm btn-info" type="submit" value="Search" />
        </span>
    </form>
</div>
<table class="table table-bordered table-striped w-auto">
    <thead>
        <tr>
            <th class="fit">
                Item Number
            </th>
            <th class="fit">
                Item Description
            </th>
            <th class="fit">
                Marked for Printing
            </th>
            <th class="fit">
                Standard Case
            </th>
            <th class="fit">
                Quantity
            </th>
            <th class="fit">
                Action Buttons
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="fit">
                @Html.DisplayFor(modelItem => item.ItemNumber)
            </td>
                <td class="fit">
                @Html.DisplayFor(modelItem => item.ItemDescription)
            </td>
                <td class="fit">
                @Html.DisplayFor(modelItem => item.Print)
            </td>
                <td class="fit">
                @Html.DisplayFor(modelItem => item.Standard)
            </td>
                <td class="fit">
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td class="fit">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Select to Print</a> |
                <a class="btn btn-warning" asp-action="BackupReprint" asp-route-id="@item.ID">Reprint</a>
                @*<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>

<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="BULabels" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="BULabels" asp-action="Index" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="BULabels" asp-action="Index" asp-route-pg="@pge"> @pge </a>
                </li>
            }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="BULabels" asp-action="Index" asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="BULabels" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>

            }
        </ul>
    }
</div>