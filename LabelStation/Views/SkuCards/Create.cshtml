@model LabelStation.Models.SkuCard

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Hudson.cshtml";
}

<h1 class="mt-5">Print SKU Card for Hudson Shipping</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4 d-inline-block me-2">
                        <label asp-for="ItemNumber" class="control-label">Select Item Number</label>
                        @Html.DropDownListFor(n => n.ItemNumber, ViewBag.ItemNumbers as SelectList, "Select Item" , new { id = "ddlOption1", @class = "form-control item"})
                        <span asp-validation-for="ItemNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 d-inline-block me-2">
                        <label class="control-label">Enter Item To Search</label>
                        <input id="scanCardSearchText" type="text" class="form-control border-3 border-primary" placeholder="Must Be Exact Match" />
                    </div>
                    <div class="col-md-4 d-inline me-2">
                        <a id="scanCardSearchBtn" class="btn btn-success">Search</a>
                    </div>
                    <div class="col-md-4 d-inline me-2">
                        <a id="scanCardClearBtn" class="btn btn-danger">Clear</a>
                    </div>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemDescription" class="control-label">Select Item Number</label>
                @Html.DropDownListFor(n => n.ItemDescription, ViewBag.ItemDescriptions as SelectList, "Select Description" , new { id = "ddlOption2", @class = "form-control"})
                <span asp-validation-for="ItemDescription" class="text-danger"></span>                
            </div>
            <div class="form-group">
                <label asp-for="PrinterName" class="form-label">Select Printer</label>
                <select asp-for="PrinterName" class="form-control">
                    <option value="">Select Printer Name</option>
                    <option value="HJ308_Clerks">HJ308 Clerks Office</option>
                    <option value="HJ310_Clerks">HJ310 Clerks Office</option>
                </select>
                <span asp-validation-for="PrinterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Print" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Hudson" class="btn btn-danger mt-2">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
