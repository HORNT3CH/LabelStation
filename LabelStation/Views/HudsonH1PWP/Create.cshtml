@model LabelStation.Models.HudsonH1PWP

@{
    ViewData["Title"] = "Hudson PWP H1";
}

<h1 class="mt-5">Print Hudson H1 PWP Labels</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemNumber" class="control-label"></label>
                <input asp-for="ItemNumber" class="form-control" />
                <span asp-validation-for="ItemNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionDate" class="control-label"></label>
                <input asp-for="ProductionDate" class="form-control" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodePartA" class="control-label"></label>
                <input asp-for="CodePartA" class="form-control" />
                <span asp-validation-for="CodePartA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodePartB" class="control-label"></label>
                <input asp-for="CodePartB" class="form-control" />
                <span asp-validation-for="CodePartB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodePartC" class="control-label"></label>
                <input asp-for="CodePartC" class="form-control" />
                <span asp-validation-for="CodePartC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shift" class="control-label"></label>
                <input asp-for="Shift" class="form-control" />
                <span asp-validation-for="Shift" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrintQty" class="control-label"></label>
                <input asp-for="PrintQty" class="form-control" />
                <span asp-validation-for="PrintQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MachineNumber" class="control-label"></label>
                <input asp-for="MachineNumber" class="form-control" />
                <span asp-validation-for="MachineNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger mt-2" asp-controller="Home" asp-action="Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
