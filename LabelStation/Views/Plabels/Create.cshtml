@model LabelStation.Models.Plabel

@{
    ViewData["Title"] = "P Labels";
    Layout = "~/Views/Shared/_Layout_Hudson.cshtml";
}
<br />
<h1 class="mt-5">Print P Labels for Hudson Production</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PrintNumber" class="control-label">Quantity</label>
                <input asp-for="PrintNumber" class="form-control" maxlength="3" min="1" placeholder="Enter Number to Print" />
                <span asp-validation-for="PrintNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Print" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Hudson" class="btn btn-danger mt-2">Cancel</a>
    <p class="mt-2 text-danger">This label prints to the Receiving Zebra Printer</p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
