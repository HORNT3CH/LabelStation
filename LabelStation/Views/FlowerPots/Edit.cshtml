@model LabelStation.Models.FlowerPots

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Hudson.cshtml";
}

<h1 class="mt-5">Print Flower Pot Label For @Model.PotNumber | @Model.PotDescription</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="PotNumber" class="control-label"></label>
                <input asp-for="PotNumber" class="form-control" readonly/>
                <span asp-validation-for="PotNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PotDescription" class="control-label"></label>
                <input asp-for="PotDescription" class="form-control" readonly/>
                <span asp-validation-for="PotDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentPartPacking" class="control-label"></label>
                <input asp-for="ParentPartPacking" class="form-control" readonly />
                <span asp-validation-for="ParentPartPacking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartNumber" class="control-label"></label>
                <input asp-for="PartNumber" class="form-control" readonly />
                <span asp-validation-for="PartNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UPC" class="control-label"></label>
                <input asp-for="UPC" class="form-control" readonly />
                <span asp-validation-for="UPC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" readonly />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Label" class="control-label"></label>
                <input asp-for="Label" class="form-control" readonly />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Print" class="form-label text-danger">Set to Yes to Print</label>
                <select asp-for="Print" class="form-control">
                    <option value="">Select To Print</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
                <span asp-validation-for="Print" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrintQuantity" class="control-label">How many to Print</label>
                <input asp-for="PrintQuantity" maxlength="3" min="1" class="form-control" />
                <span asp-validation-for="PrintQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Print Labels" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-2" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
