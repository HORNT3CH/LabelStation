@model IEnumerable<LabelStation.Models.Kanban>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Hudson.cshtml";

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1 class="mt-5">Kanban BOM List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New BOM Item</a>
</p>
<div class="col-4 p-0 justify-content-end mb-2">
    <form asp-controller="Kanbans" asp-action="Index">
        <span class="btn-group">
            <input class="form-control" type="text" name="SearchText" placeholder="Search Item Number" />
            <input class="p-1 m-lg-2 btn btn-sm btn-info" type="submit" value="Search" />
        </span>
    </form>
</div>
<table class="table table-bordered table-striped table-responsive m-auto">
    <thead>
        <tr>
            <th class="fit">
                @Html.DisplayNameFor(model => model.Print)
            </th>
            <th class="fit">
                @Html.DisplayNameFor(model => model.BOMID)
            </th class="fit">
            <th>
                @Html.DisplayNameFor(model => model.ItemNumber)
            </th class="fit">
            <th>
                @Html.DisplayNameFor(model => model.ItemDescription)
            </th class="fit">
            <th>
                @Html.DisplayNameFor(model => model.PrintQty)
            </th class="fit">
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th class="fit">
            <th>
                @Html.DisplayNameFor(model => model.MachineNumber)
            </th class="fit">
            <th>
                @Html.DisplayNameFor(model => model.ReOrderQty)
            </th class="fit">
            <th>
                @Html.DisplayNameFor(model => model.OrderQty)
            </th class="fit">
            <th>
                @Html.DisplayNameFor(model => model.LineLimit)
            </th class="fit">
            <th>
                @Html.DisplayNameFor(model => model.ParentSKU)
            </th>
            <th class="fit">
                @Html.DisplayNameFor(model => model.ParentDescription)
            </th>
            <th class="fit">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.Print)
            </td>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.BOMID)
            </td>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.ItemNumber)
            </td>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.ItemDescription)
            </td>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.PrintQty)
            </td>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.MachineNumber)
            </td>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.ReOrderQty)
            </td>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.OrderQty)
            </td>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.LineLimit)
            </td>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.ParentSKU)
            </td>
            <td class="fit">
                @Html.DisplayFor(modelItem => item.ParentDescription)
            </td>            
            <td class="fit">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit / Print</a>
                @*<a class="btn btn-warning" asp-action="Details" asp-route-id="@item.ID">Details</a>*@
                @*<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>

<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Kanbans" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Kanbans" asp-action="Index" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Kanbans" asp-action="Index" asp-route-pg="@pge"> @pge </a>
                </li>
            }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Kanbans" asp-action="Index" asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Kanbans" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>

            }
        </ul>
    }
</div>