@{
    ViewData["Title"] = "Home Page";

}

<br />
<div class="text-center">
    <h1 class="display-4 mt-5">Welcome to the Label Station</h1>
</div>
<div class="container text-center mt-4">
    <div class="row">
        <div class="col">
            <div class="card shadow" style="width: 18rem;" data-toggle="tooltip" data-placement="top" title="Hudson Labels">
                <div class="card-body" role="button">
                    <h3 class="card-title"><a class="nav-link text-dark stretched-link" onclick="return DisplayProgressMessage(this, 'Loading...');" asp-area="" asp-controller="Home" asp-action="Hudson">Hudson Labels</a></h3>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow" style="width: 18rem;" data-toggle="tooltip" data-placement="right" title="Hesperia Labels">
                <div class="card-body" role="button">
                    <h3 class="card-title"><a class="nav-link text-dark stretched-link" onclick="return DisplayProgressMessage(this, 'Loading...');" asp-area="" asp-controller="Home" asp-action="Hesperia">Hesperia Labels</a></h3>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow" style="width: 18rem;" data-toggle="tooltip" data-placement="right" title="Juarez Labels">
                <div class="card-body" role="button">
                    <h3 class="card-title"><a class="nav-link text-dark stretched-link" onclick="return DisplayProgressMessage(this, 'Loading...');" asp-area="" asp-controller="Home" asp-action="Juarez">Juarez Labels</a></h3>
                </div>
            </div>
        </div>        
    </div>
</div>
<script type="text/javascript">
        function DisplayProgressMessage(ctl, msg) {            
            $(ctl).prop("disable", true).text(msg);
            $("body").addClass("submit-progress-bg");
            $(".submit.progress").removeClass("hidden");
            setTimeout(function() {
                $(ctl).click();
            }, 1);
            return true;
        }    
</script>