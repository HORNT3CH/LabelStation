@{
    ViewData["Title"] = "Home Page";

}

<br />
<div class="text-center">
    <h1 class="display-4 mt-5">Welcome to the Label Station</h1>
</div>
<div class="container text-center mt-4">
    <div class="row">
        <div class="col">
            <div class="card shadow" style="width: 18rem;" data-toggle="tooltip" data-placement="top" title="Add to Schedule">
                <div class="card-body" role="button">
                    <h3 class="card-title"><a class="nav-link text-dark stretched-link" onclick="return DisplayProgressMessage(this, 'Loading...');" asp-area="" asp-controller="Home" asp-action="Hudson">Hudson Label Station</a></h3>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow" style="width: 18rem;" data-toggle="tooltip" data-placement="right" title="View Schedule">
                <div class="card-body" role="button">
                    <h3 class="card-title"><a class="nav-link text-dark stretched-link" onclick="return DisplayProgressMessage(this, 'Loading...');" asp-area="" asp-controller="Home" asp-action="Hesperia">Hesperia Label Station</a></h3>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow" style="width: 18rem;" data-toggle="tooltip" data-placement="right" title="View Dock Lot">
                <div class="card-body" role="button">
                    <h3 class="card-title"><a class="nav-link text-dark stretched-link" onclick="return DisplayProgressMessage(this, 'Loading...');" asp-area="" asp-controller="Home" asp-action="Juarez">Juarez Label Station</a></h3>
                </div>
            </div>
        </div>        
    </div>
</div>
