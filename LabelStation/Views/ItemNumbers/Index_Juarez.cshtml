@model IEnumerable<LabelStation.Models.ItemNumber>

@{
    ViewData["Title"] = "Item Numbers";
    Layout = "~/Views/Shared/_Layout_Juarez.cshtml";

    Pager juarezPager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        juarezPager = ViewBag.Pager;
        pageNo = juarezPager.CurrentPage;
    }
}

<h1 class="mt-5">Items</h1>

<p>
    <a class="btn btn-primary" asp-action="Create_Juarez">Create New</a>
</p>

<div class="col-4 p-0 justify-content-end mb-2">
    <form asp-controller="ItemNumbers" asp-action="Index_Juarez">
        <span class="btn-group">
            <input class="form-control" type="text" name="SearchText" placeholder="Search Key" />
            <input class="p-1 m-lg-2 btn btn-sm btn-info" type="submit" value="Search" />
        </span>
    </form>
</div>

<div class="container-fluid table-responsive">
    <table id="itemNumber" class="table table-bordered table-striped w-auto">
        <thead>
            <tr>
                <th>
                    Item Number
                </th>                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(pagerItem => item.Item)
                    </td>                    
                    <td>
                        <a class="btn btn-primary" asp-action="Edit_Juarez" asp-route-id="@item.ID">Edit</a> |
                        <a class="btn btn-warning" asp-action="Details_Juarez" asp-route-id="@item.ID">Details</a> |
                        <a class="btn btn-danger" asp-action="Delete_Juarez" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
    }
        </tbody>
    </table>
</div>

<div class="container">
    @if (juarezPager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if (juarezPager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="ItemNumbers" asp-action="Index_Juarez" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="ItemNumbers" asp-action="Index_Juarez" asp-route-pg="@(juarezPager.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var pge = juarezPager.StartPage; pge <= juarezPager.EndPage; pge++)
            {
                <li class="page-item @(pge == juarezPager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="ItemNumbers" asp-action="Index_Juarez" asp-route-pg="@pge"> @pge </a>
                </li>
            }
            @if (juarezPager.CurrentPage < juarezPager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="ItemNumbers" asp-action="Index_Juarez" asp-route-pg="@(juarezPager.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="ItemNumbers" asp-action="Index_Juarez" asp-route-pg="@(juarezPager.TotalPages)">Last</a>
                </li>

            }
        </ul>
    }
</div>